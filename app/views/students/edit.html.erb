<h1>edit this student info:</h1>

<%= form_for(@student) do |f| %>
    <div>
     <%= f.label :first_name %>
     <%= f.text_field :first_name %>
    </div>

    <div>
     <%= f.label :last_name %>
     <%= f.text_field :last_name %>
    </div>

    <div>
     <%= f.submit "Update Student" %>
    </div>
<% end %>
